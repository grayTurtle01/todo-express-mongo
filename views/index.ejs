<html>
    <head>
        <meta charset="utf-8">
        <title>CRUD Express-Mongo</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <h1>TODO List</h1>
        <h3>[Express-Mongo]</h3>

        <form action="/tasks" method="post">
            <input name="content" autofocus>
            <input type="submit" value="Add Task">
        </form>


        <table border=1px>
            <thead>
                <th>content</th>
                <th>done</th>
            </thead>

            <tbody>
                
                <%for (task of tasks) {%>
                    <tr task_id="<%= task._id %>" class="row">
                        <td class="content"><%= task.content %></td>
                        
                        <td class="state"><%= task.done %></td>
                        <td><button id=<%= task._id %>
                                    onclick="deleteTask(this)">
                             delete
                             </button>
                        </td>

                        <td><button id=<%= task._id %>
                                    onclick="openEditor(this)">
                             edit
                             </button>
                        </td>
                        
                       <td>
                           <input type="checkbox" task_id="<%= task._id %>"
                                  state="<%=task.done%>"
                                  onclick="toggleState(this)" >
                       </td>     

                    </tr>
               <%}%>
               
            </tbody>
        </table>


        <script src="main.js"></script>

        
    </body>
</html>
